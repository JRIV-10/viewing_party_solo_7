<section id="header">
  <h1>Discover Movies</h1>
</section>

<div id="discover-button">
  <%= button_to 'Discover Top Rated Movies',  user_movies_path(@user), method: :get%>
</div>

<div id="movie-search">
  <%= form_with(url: "/users/#{@user.id}/movies?q=keyword", method: :get, local: true) do |form| %>
    <%= form.text_field :movie_title %> 
    <%= form.submit "Search" %>
  <% end %>
</div>